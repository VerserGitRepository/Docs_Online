<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verser Docs Online</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top nav-justified ">

        @*<div class="container">*@
        @*<div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>*@
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="pull-left"> <img src="~/Images/VerserLogo.png" height="50px" width="100px" /></li>
                @if (@Session["Username"] != null)
                {
                    <li style="padding-left:50px"> @Html.ActionLink("Docs Online", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li style="float:right">@Html.ActionLink("LOGOUT", "Logout", "Login")</li>
                }
                else
                {
                    <li class="nav navbar-nav" style="float:right">@Html.ActionLink("Login", "Login", "Login")</li>

                }
            </ul>
        </div>
    </div>
    @*</div>
        </div>*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Verser Technology Lifecycles</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>

    #navbar {
        overflow: hidden;
        background-color: #f1f1f1;
        padding: 90px 10px;
        transition: 0.4s;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 99;
    }

    .body {
        padding-top: 0px;
        width: 100%;
    }

    .navbar-inverse {
        background-color: #e2e2e2 !important;
        border-color: #D3D3D3 !important;
    }

        .navbar-inverse .navbar-nav > li > a {
            color: #959ca1;
            font-family: sans-serif;
            font-weight: 600;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                color: #f79636;
            }

    a {
        color: #959ca1;
    }

    .navbar, .navbar div {
        min-height: 40px;
        max-height: 60px;
        height: 50px;
        margin-left: 60px;
    }

    .fixed-top {
        min-height: 40px;
        max-height: 60px;
        height: 50px;
        margin-left: 60px;
        margin-top: 0px;
    }
    /* Additional styles to style some of your child elements */
    .navbar-brand {
        padding: 10px;
    }

    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .nav-tabs .dropdown-menu, .nav-pills .dropdown-menu, .navbar-nav .dropdown-menu, .nav .navbar-nav .dropdown-toggle {
        margin-top: 0;
    }

    .dropdown-menu > li > a:hover {
        background-color: #FFA500;
    }

    .navbar .navbar-toggle {
        padding: 4px 10px;
    }

    .tooltip-inner {
        /*max-width: 350px;*/
        height: 20px;
        /* If max-width does not work, try using width instead */
        width: 250px;
    }
</style>